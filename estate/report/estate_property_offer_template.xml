<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_offers_table">
        <t t-if="property.offer_ids">
            <h4>Offers:</h4>
            <table  class="table table-condensed" >
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>Property Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="property.offer_ids" t-as="offer">
                        <tr>
                            <td><span t-field="offer.price"/></td>
                            <td><span t-field="offer.validity"/></td>
                            <td><span t-field="offer.date_deadline"/></td>
                            <td><span t-field="offer.property_type_id.name"/></td>
                            <td><span t-field="offer.status"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <p>No offers yet for this property.</p>
        </t>
    </template>
</odoo>
