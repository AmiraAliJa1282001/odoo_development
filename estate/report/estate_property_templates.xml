<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout" t-lang="en_US">
                    <div class="page">
                        <h1 t-field="property.name"></h1>
                    
                        <br/>
                        <div class="invoice_info"> </div>
                        <div>
                            <h4><strong>Salesman:</strong> <span t-field="property.salesperson_id.name"/></h4>
                            <h4><strong>Expected Price:</strong> <span t-field="property.expected_price"/></h4>
                            <h4><strong>State:</strong> <span t-field="property.state"/></h4>
                        </div>

                            <t t-call="estate.property_offers_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
