<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_salesman_estate_properties">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout" t-lang="en_US">
                   <t t-foreach="docs" t-as="user">
                        <h2>Properties for <span t-field="user.name"/></h2>
                        <t t-foreach="user.property_ids" t-as="property">
                            <h3><span t-field="property.name"/></h3>
                            <p><strong>Selling Price:</strong> <span t-field="property.selling_price"/></p>
                            <p><strong>State:</strong> <span t-field="property.state"/></p>
                            

                            <t t-call="estate.property_offers_table"/>
                            <br/>
                        </t>
                   </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
