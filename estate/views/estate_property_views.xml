<?xml version="1.0"?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-danger="state=='canceled'" decoration-success="state=='offer_received' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'" >
                <field name="name" string='Title'/>
                <field name="state" optional="True"/>
                <field name="postcode" string='Postcode' />
                <field name="bedrooms" string='Bedrooms'/>
                <field name="living_area" string='Living Area (sqm)'/>
                <field name="expected_price" string='Expected Price'/>
                <field name="selling_price" string='Selling Price'/>
                <field name="date_availability" string='Available From' optional="True" /> 
		<field name="type_id" string='Type'/> 
            </list>
        </field>
    </record>
     <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_sold" type="object" string="Sold" invisible="state != 'offer_accepted'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['canceled','sold']" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Real Estate Title"/>
                        </h1>
                    </div>
		    <div>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Select tags" options="{'color_field': 'color'}"/>
                    </div>
                    <div>
                        <group>
                                <group style="width:50%;">
				    <field name="type_id" string="Property Type" options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="postcode"/>
                                    <field name="date_availability"/>
                                </group >
                                <group style="width:50%;">              
                                    <field name="expected_price"/>
				    <field name="best_price"/>
                                    <field name="selling_price"/>
                                </group>
                        
                        </group>
                    </div>
                    <notebook>
                        <page string="Description">
                        	<group>
 					<field name="description"/>
                           		<field name="bedrooms"/>
                            		<field name="living_area"/>
                            		<field name="facades"/>
                            		<field name="garage"/>
                            		<field name="garden"/>
				</group>
				<group invisible="not garden">
                            		<field name="garden_area"/>
                            		<field name="garden_orientation"/>
				</group>
				<group>
                                    <field name="total_area"/>
                                </group>
                        </page>
			<page string="Offers">
                                <field name="offer_ids" widget="one2many" readonly="state in ['canceled','sold', 'offer_accepted']" >
                                    
                                    <list editable="top" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
				                                             <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity" />
                                        <field name="date_deadline"/>                                       
                                        <button name="action_accept"   type="object" icon="fa-check" states="draft" invisible="status in ['accepted','refused']"/>
                                        <button name="action_refused"  type="object" icon="fa-times" states="draft" invisible="status in ['accepted','refused']"/>                                       
                                        <field name="status" optional="True"/> 
                                      
				   </list>
                                </field>
                        </page>
			<page string="Other Info">
                                <group>
                                    <field name="salesperson_id" style="color:#00a09d;"/>
                                    <field name="buyer_id" style="color:#00a09d;"/>
                                </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Real Estate">
                <field name="name" string="Title" />
                <field name="bedrooms"/>
                <field name="expected_price"/>
                <field name="garden"/>
                <field name="living_area" filter_domain="[ ('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available Properties" name="available_properties" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>  
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type_id" records_draggable="false" groups_draggable="false">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box" >
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <span class="oe_kanban_title">
                                        <h3>
                                            <field name="name"/>
                                        </h3>   
                                    </span>
                                    <div class="oe_kanban_bottom">
                                        <div>
                                            <strong>Expected Price:</strong>
                                            <field name="expected_price" />
                                            
                                        </div>
                                        <div t-if="record.state.raw_value == 'offer_received'">
                                            <strong>Best Price:</strong>
                                            <field name="best_price" string="Best Offer" />
                                        
                                        </div>
                                        <div t-if="record.state.raw_value == 'offer_accepted'">
                                                <strong>Selling Price:</strong>
                                                <field name="selling_price" />
                                            
                                        </div>
                                        <div class="oe_kanban_tags">
                                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record> 
    
</odoo>
